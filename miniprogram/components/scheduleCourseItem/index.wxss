/* components/scheduleCourseList/index.wxss */
.course-item {
  position: relative;
  width: 100%;
  height: 150rpx;
  border-bottom:1px solid #e6e6e6;
  margin-top: 20rpx;
}

.title {
  position: absolute;
  width: 500rpx;
  top: 25rpx;
  left: 0;
  /* display: flex; */
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.title-txt {
  font-family: Arial;
  font-size: 28rpx;
}

.course-title {
  margin-left: 20rpx;
}

.section {
  position: absolute;
  top: 80rpx;
  font-family: Arial;
  font-size: 26rpx;
  color: #919399;
}

.add {
  position: absolute;
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 50rpx;
  top: 45rpx;
  right: 0rpx;
  background: #6493DF;
  border-radius: 10rpx;
  color: #ffffff;
  font-family: Arial;
  font-size: 26rpx;
  line-height: 50rpx;
}