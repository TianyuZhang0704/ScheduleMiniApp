/* miniprogram/custom-tab-bar/index.wxss */
.tab-bar {
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  width: 100%;
  height: 140rpx;
  background: white;
  z-index: 100;
  display: flex;
  flex-direction: row;
  /* padding-bottom: env(safe-area-inset-bottom); */
  box-shadow: 0rpx -5rpx 14rpx 0rpx rgba(0,0,0,0.1);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 26rpx;
}

.cover-image {
  width: 50rpx;
  height: 50rpx;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
}

.centerImage {
  width: 85rpx;
  height: 85rpx;
  position: absolute;
  top: 0rpx;
  border-radius: 30%;
  border: 15rpx solid #fff;
}