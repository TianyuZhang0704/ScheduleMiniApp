/* miniprogram/pages/login/index.wxss */
.login-btn {
  position: absolute;
  top: 70%;
  left: 125rpx;
  background: #57BD6A;
  height: 94rpx;
  border-radius: 47rpx;
}

.btn-txt {
  color: #ffffff;
  font-family: Arial;
  font-weight: 200;
  font-size: 28rpx;
  letter-spacing: 3rpx;
  width: 355rpx;
  height: 32rpx;
  line-height: 28rpx;
  margin-top: 18rpx;
  margin-left: 55rpx;
}

.mask {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2;
}

.info-container {
  position: absolute;
  background: #ffffff;
  width: 750rpx;
  height: 600rpx;
  bottom: 0;
  border-radius: 30rpx 30rpx 0 0;
}

.app-info {
  margin-top: 50rpx;
  margin-left: 50rpx;
  width: 750rpx;
  display: flex;
}

.app-logo {
  background: pink;
  border-radius: 50%;
  width: 55rpx;
  height: 55rpx;
}

.app-name {
  margin-left: 25rpx;
  font-family: Arial Regular;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 55rpx;
}

.ask {
  width: 625rpx;
  margin-left: 50rpx;
  margin-top: 40rpx;
  font-family: Arial;
  font-size: 38rpx;
  line-height: 50rpx;
}

.user-info {
  position: relative;
  width: 650rpx;
  height: 110rpx;
  margin-top: 50rpx;
  margin-left: 50rpx;
  border-top: 0.5rpx solid #eeeeee;
  border-bottom: 0.5rpx solid #eeeeee;
}

.user-avatar {
  position: absolute;
  top: 20rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 10rpx;
}

.user-name {
  position: absolute;
  left: 95rpx;
  top: 20rpx;
  font-size: 32rpx;
  font-family: Arial;
  line-height: 70rpx;
}

.btns {
  margin-top: 60rpx;
  margin-left: 50rpx;
  width: 650rpx;
  display: flex;
}

.cancel-btn {
  width: 300rpx;
  height: 75rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-family: Arial;
  color: #57BD6A;
  font-size: 32rpx;
  line-height: 75rpx;
  text-align: center;
}

.authorize-btn {
  width: 300rpx;
  height: 75rpx;
  background: #57BD6A;
  border-radius: 10rpx;
  margin-left: 50rpx;
  font-family: Arial;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 75rpx;
  text-align: center;
}